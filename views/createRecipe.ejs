<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/styles.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <title>Create Recipe</title>
</head>
<body>
  <div class="container mt-5">
    <h1>Create a New Recipe</h1>

    <form method="POST" action="/recipe/create" id="recipeForm">
      <!-- Recipe Name -->
      <div class="mb-3">
        <label for="recipeName" class="form-label">Recipe Name:</label>
        <input type="text" id="recipeName" name="recipeName" class="form-control" required>
      </div>

      <!-- Tags -->
      <div class="mb-3 row">
        <label for="tags" class="form-label">Tags:</label>
        <div class="col-2">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="tag1" name="tags[]" value="vegetarian">
            <label class="form-check-label" for="tag1">Vegetarian</label>
          </div>
        </div>
        <div class="col-2">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="tag2" name="tags[]" value="vegan">
            <label class="form-check-label" for="tag2">Vegan</label>
          </div>
        </div>
        <div class="col-2">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="tag3" name="tags[]" value="dairy-free">
            <label class="form-check-label" for="tag3">Dairy-Free</label>
          </div>
        </div>
        <div class="col-2">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="tag4" name="tags[]" value="gluten-free">
            <label class="form-check-label" for="tag4">Gluten-Free</label>
          </div>
        </div>
      </div>

      <!-- Image -->
      <div class="mb-3">
        <label for="imageFile" class="form-label">Recipe Thumbnail:</label>
        <input class="form-control" type="file" id="imageFile" name="imageFile" accept="image/*">
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description:</label>
        <textarea class="form-control" name="description" id="description" rows="4" required></textarea>
      </div>

        <!-- Ingredients -->
      <div id="ingredientsContainer" class="flex">
          <div>
            <label class="form-label">Ingredients:</label>
          </div>
          <div class="mb-2">
            <button type="button" class="btn btn-success" id="addIngredientButton">Add Ingredient
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
                  <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z"/>
              </svg>
            </button>
          </div>
        
          <div class="input-group mb-2">
            <input type="number" name="ingredientQuantities[]" class="form-control" required>
            <select name="ingredientUnits[]" class="form-select">
              <option value="count">count</option>
              <option value="grams">grams</option>
              <option value="ounces">ounces</option>
              <option value="cups">cups</option>
            </select>
            <input type="text" name="ingredients[]" class="form-control" required>
            <button type="button" class="btn btn-danger removeButton" disabled>
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                  <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
              </svg>
            </button>
          </div>
        </div>
        

      <div id="stepsContainer" class="flex">
        <div>
          <label class="form-label">Steps:</label>
        </div>
        <div class="mb-2">
          <button type="button" class="btn btn-success" id="addStepButton">Add Step
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z"/>
            </svg>
          </button>
        </div>
      
        <!-- Steps -->
        <div class="input-group mb-2">
          <input type="text" name="steps[]" class="form-control" required>
          <button type="button" class="btn btn-danger removeButton" disabled>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
            </svg>
          </button>
        </div>
      </div>          

      <button type="submit" class="btn btn-primary mt-3">Create Recipe</button>
    </form>
  </div>
    <script src="/javascripts/recipeForm.js"></script>
  </body>
</html>